rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // HELPER FUNCTIONS
    // ========================================

    // Check if user is a super admin (via custom claim set by seed-admins script)
    // MIGRATION: During transition, accepts both 'admin' (legacy) and 'superadmin' (new)
    function isSuperAdmin() {
      return request.auth != null
        && (request.auth.token.superadmin == true || request.auth.token.admin == true);
    }

    // Future: Check if user has permission document with specific role
    function hasRole(role) {
      let permDoc = get(/databases/$(database)/documents/userPermissions/$(request.auth.uid));
      return permDoc.data.role == role;
    }

    // Future: Check if user has access to specific client
    function hasClientAccess(clientId) {
      let permDoc = get(/databases/$(database)/documents/userPermissions/$(request.auth.uid));
      return isSuperAdmin()
        || (permDoc != null
          && (permDoc.data.clientIds == null || clientId in permDoc.data.clientIds));
    }

    // Future: Check if user has access to specific event
    function hasEventAccess(eventId) {
      let permDoc = get(/databases/$(database)/documents/userPermissions/$(request.auth.uid));
      return isSuperAdmin()
        || (permDoc != null
          && (permDoc.data.eventIds == null || eventId in permDoc.data.eventIds));
    }

    // ========================================
    // USER PERMISSIONS COLLECTION
    // ========================================

    match /userPermissions/{userId} {
      // Users can read their own permissions
      allow read: if request.auth != null && request.auth.uid == userId;

      // Only superadmins can create/update/delete permissions
      allow write: if isSuperAdmin();
    }

    // Super admin collection — only readable by self
    match /superAdmins/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if isSuperAdmin();
    }

    // Users can read/write their own root profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Clients — admin-only (end users don't need to list clients)
    match /clients/{clientId} {
      allow read: if isSuperAdmin();
      allow write: if isSuperAdmin();

      match /events/{eventId} {
        allow read: if request.auth != null;
        allow write: if isSuperAdmin();

        // Whitelist — read for all authed (needed for auth flow), write for admins
        match /whitelist/{whitelistId} {
          allow read: if request.auth != null;
          allow write: if isSuperAdmin();
        }

        // Event content (brands, posts, sessions, stands, happenings, participants)
        // Read for all authed, write for admins
        match /{subcollection}/{docId} {
          allow read: if request.auth != null;
          allow write: if isSuperAdmin();
        }

        // User data — owned by the user; admins can read and write locked fields
        match /users/{userId}/{document=**} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
          allow read, write: if isSuperAdmin();
        }
      }
    }
  }
}
