rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // SuperAdmin: via custom claim (supports legacy 'admin' claim during migration)
    function isSuperAdmin() {
      return request.auth != null
        && (request.auth.token.superadmin == true
            || request.auth.token.admin == true
            || request.auth.token.role == 'superadmin');
    }

    // Any admin role
    function isAnyAdmin() {
      return isSuperAdmin()
        || (request.auth != null && request.auth.token.role == 'clientAdmin')
        || (request.auth != null && request.auth.token.role == 'eventAdmin');
    }

    // Client storage â€” public read (images served via Next.js Image Optimization),
    // admin-only write
    match /clients/{allPaths=**} {
      allow read: if true;
      allow write: if isAnyAdmin();
    }
  }
}
