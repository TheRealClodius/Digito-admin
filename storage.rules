rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Only authenticated users can read; superadmins can write
    // MIGRATION: During transition, accepts both 'admin' (legacy) and 'superadmin' (new)
    match /clients/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && (request.auth.token.superadmin == true || request.auth.token.admin == true);

      // Future: Add client-scoped access checks here
      // allow write: if request.auth != null && hasClientAccess(clientId);
    }
  }
}
